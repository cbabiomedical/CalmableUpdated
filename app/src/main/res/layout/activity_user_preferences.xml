<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    tools:context=".UserPreferences">

  <ScrollView
      android:id="@+id/homeScroll"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true"
      android:isScrollContainer="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginTop="20dp"
          android:layout_marginStart="24dp">

        <ImageView
            android:layout_width="8dp"
            android:layout_height="90dp"
            android:background="@drawable/darkblue_line"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What do you prefer ? "
            android:textColor="@color/dark_blue_300"
            android:textSize="30dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold" />
      </LinearLayout>


      <CheckBox
          android:id="@+id/c1"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/music_selector"
          android:button="@null"
          android:text="  Travel Music"
          tools:ignore="MissingConstraints" />

      <CheckBox
          android:id="@+id/c2"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/inspiration_selector"
          android:button="@null"
          android:text="  Inspiration" />

      <CheckBox
          android:id="@+id/c3"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/music_selector"
          android:button="@null"
          android:text="  Relax Music" />

      <CheckBox
          android:id="@+id/c4"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/tree_selector"
          android:button="@null"
          android:text=" Nature Sounds" />

      <CheckBox
          android:id="@+id/c5"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/meditation_selector"
          android:button="@null"
          android:text="   Meditate" />

      <CheckBox
          android:id="@+id/c6"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/music_selector"
          android:button="@null"
          android:text="   Country Music" />

      <CheckBox
          android:id="@+id/c7"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/night_selector"
          android:button="@null"
          android:text="   Sleep Stories" />

      <CheckBox
          android:id="@+id/c8"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/music_selector"
          android:button="@null"
          android:text="   Chill out music" />

      <CheckBox
          android:id="@+id/c9"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/music_selector"
          android:button="@null"
          android:text="   Classical Music" />

      <CheckBox
          android:id="@+id/c10"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/video_selector"
          android:button="@null"
          android:text="   Videos" />

      <CheckBox
          android:id="@+id/c11"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/games_selector"
          android:button="@null"
          android:text="   Games" />

      <CheckBox
          android:id="@+id/c12"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/smile_selector"
          android:button="@null"
          android:text="   Breathing Exercise" />

      <CheckBox
          android:id="@+id/c13"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/star_selector"
          android:button="@null"
          android:text="   Success Stories" />

      <CheckBox
          android:id="@+id/c14"
          android:layout_width="211dp"
          android:layout_height="44dp"
          android:drawableStart="@drawable/yoga_selector"
          android:button="@null"
          android:text="   Yoga" />

      <Button
          android:id="@+id/done"
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="18dp"
          android:layout_marginBottom="24dp"
          android:textColor="@color/white"
          android:text="done"
          android:textSize="20sp"
          android:textStyle="bold"
          android:background="@drawable/mybutton"
          android:layout_gravity="center"/>

    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>