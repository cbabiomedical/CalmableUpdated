<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv001"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/home_main_btn"
        android:gravity="right"
        android:paddingTop="32dp"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvMusicCoins1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_main_btn"
        android:drawableEnd="@drawable/ic_coin"
        android:gravity="right |center"
        android:text="0000\t"
        android:textColor="@color/white"
        android:layout_margin="24dp"
        android:textSize="18dp" />


    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_below="@+id/tv001"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="-32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/rounded_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="59dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toBottomOf="@+id/view3"
        app:layout_constraintStart_toStartOf="@+id/view3"
        app:layout_constraintTop_toTopOf="@+id/view3"
        app:srcCompat="@drawable/game_icon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="155dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Instructions"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/view3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="180dp"
        android:text="- Play Quiz"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_marginStart="180dp"
        android:text="- Breathing Games to release \nstress"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Collect Coins"
        android:textColor="@color/white"
        android:layout_below="@+id/textView6"
        android:layout_marginStart="180dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="180dp"
        android:text="- Get Ranked in Leaderboard"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/leaderboard"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_below="@+id/view3"
        android:layout_marginStart="114dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_1"
        android:drawableLeft="@drawable/trophy"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="Breathing Game"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>


