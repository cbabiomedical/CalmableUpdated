<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/report_bg"
    tools:context=".SearchReports">

    <TextView
        android:id="@+id/reportspagetv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="60dp"
        android:background="#C6DDEDEC"
        android:fontFamily="@font/arizonia"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Reports Page"
        android:textColor="@color/dark_blue_100"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reportspagetv"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="70dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/reportmain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/home_main_btn"
            android:text="Report Main"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/linechart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/reportmain"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/home_main_btn"
            android:text="Line Chart"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/calmchartbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/linechart"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/home_main_btn"
            android:text="Calm Chart"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/happinesschart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/calmchartbtn"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/home_main_btn"
            android:text="Happiness Chart"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/stresschart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/happinesschart"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/home_main_btn"
            android:text="Stress chart"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/interventionlocationbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/stresschart"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/home_main_btn"
            android:text="Location/Time chart"
            android:textColor="@color/white" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        android:background="@color/white"
        app:itemIconTint="@color/teal_700"
        app:itemTextColor="@color/teal_700"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>